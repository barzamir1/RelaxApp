<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.StatsPageToc">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="My Stats in a Calendar"
            BackgroundColor="Transparent"
            Clicked="calanderClicked"/>
            
            <Button Text="My stats in a Map" 
            BackgroundColor="Transparent"
            Clicked="mapClicked"/>

            <Button Text="All Users Activities" 
            BackgroundColor="Transparent"
            Clicked="activitiesClicked"/>

            <Button Text="Last Measurements" 
            BackgroundColor="Transparent"
            Clicked="lastMeasurementsClicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>