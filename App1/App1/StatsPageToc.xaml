<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.StatsPageToc">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="LabelUserName" Text="My Statistics"
           HorizontalOptions="Center"
           Margin="50"
           VerticalOptions="CenterAndExpand"
           FontSize="Large"/>

            <Button Text="My Stats in a Calendar"
            Clicked="calanderClicked"
            Style="{StaticResource buttonStyle}"/>
            
            <Button Text="My stats in a Map" 
            Clicked="mapClicked"
            Style="{StaticResource buttonStyle}"/>

            <Button Text="All Users Activities" 
            Clicked="activitiesClicked"
            Style="{StaticResource buttonStyle}"/>

            <Button Text="Last Measurements" 
            Clicked="lastMeasurementsClicked"
            Style="{StaticResource buttonStyle}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>