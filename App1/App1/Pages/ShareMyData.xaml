<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Pages.ShareMyData">
    <ContentPage.Content>
        <StackLayout Margin="10,10,10,10">
            <Label Text="Share my Data"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" FontSize="Large"/>
            <Label Text="The following code should be sent to a therapist or a guardian."
                   FontSize="Medium"/>
            <Label Text="This will allow him/her to view all your stressed moments statistics and locations"
                   FontSize="Medium"/>
            <Label x:Name="labelUserShortId" FontSize="Large" TextColor="Red" 
                   HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>