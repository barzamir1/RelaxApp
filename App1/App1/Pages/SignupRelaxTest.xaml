<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Pages.SignupRelaxTest">
    <ContentPage.Content>
        <StackLayout Margin="10,10,10,10" HorizontalOptions="CenterAndExpand">
            <Image Source="relaxAppLogo.png" HeightRequest="120" WidthRequest="120" VerticalOptions="Center"/>
            <Label Text="Lets Get Started!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontAttributes="Bold" FontSize="Large"/>
            <Label Text="The entire process should take about 3 minutes.&#x0a;Make sure you stay still and quiet."
                HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" FontSize="Medium"/>
            <Button Text="I'm ready" Clicked="Start_Clicked"  Style="{StaticResource buttonStyle}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>